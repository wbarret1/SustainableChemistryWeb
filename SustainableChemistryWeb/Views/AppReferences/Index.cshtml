@model IEnumerable<SustainableChemistryWeb.Models.AppReference>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Risdata)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FunctionalGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reaction)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Risdata)
            </td>
