@model SustainableChemistryWeb.Models.Reference

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this reference?</h3>
@using (Html.BeginForm("Delete", "References", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FunctionalGroup)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FunctionalGroup.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Reaction)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Reaction.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayName("Reference Text")
            </dt>
            <dd class="col-sm-10">
                @ViewBag.ReferenceText
            </dd>
        </dl>

        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </div>
}